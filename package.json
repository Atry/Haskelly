{
  "name": "haskelly",
  "displayName": "Haskelly",
  "description": "Complete support for casual and expert Haskell development.",
  "version": "0.1.0",
  "icon": "resources/icon.png",
  "publisher": "UCL",
  "repository": {
		"type": "git",
		"url": "https://gitlab.cs.ucl.ac.uk/VSCodeHaskell/HaskellIntegrationExtension.git"
	},
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onCommand:editor.runHaskell",
    "onCommand:editor.runQuickCheck",
    "onCommand:editor.ghci",
    "onLanguage:haskell"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "editor.runHaskell",
        "title": "Run file"
      },
      {
        "command": "editor.runQuickCheck",
        "title": "QuickCheck"
      },
      {
        "command": "editor.ghci",
        "title": "Load GHCi"
      },
      {
        "command": "editor.stackBuild",
        "title": "Stack build"
      }
    ],
    "languages": [
      {
        "id": "haskell",
        "aliases": [
          "Haskell",
          "haskell"
        ],
        "extensions": [
          ".hs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "haskell",
        "scopeName": "source.haskell",
        "path": "./syntaxes/haskell.tmLanguage"
      }
    ]
  },
  "capabilities": {
    "completionProvider": {
      "resolveProvider": "true",
      "triggerCharacters": [
        "."
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "stream-splitter": "^0.3.2"
  }
}
